<form class="form-horizontal" method="POST" action="/singleVisits/create">
    <fieldset>
        <legend>New Single Visit</legend>

        <div class="form-group">
            <label class="col-sm-1 control-label" for="name">Name</label>
            <div class="col-sm-2 ">
                <input type="text" class="form-control" id="name" placeholder="Name" name="name" required >
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-1 control-label" for="duration">Duration</label>
            <div class="col-sm-2 ">
                <input type="text" class="form-control" id="duration" placeholder="Duration" name="duration" required >
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-1 control-label" for="color">Color</label>
            <div class="col-sm-2 ">
                <input type="text" class="form-control" id="color" placeholder="Color for the Calendar" name="color" required >
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-1 control-label" for="price">Price</label>
            <div class="col-sm-2 ">
                <input type="text" class="form-control" id="price" placeholder="0.00 лв" name="price" required >
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-2 col-sm-offset-1">

                <button type="reset" class="btn btn-default">Cancel</button>

                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>